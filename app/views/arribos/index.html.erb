<% titulo 'Arribos de material' %>
  <ul class="lista_lineal leyenda derecha">
    <li><strong>Leyenda:</strong></li>
    <li class="navegando">Navegando</li>
    <li class="esperando">En espera para atracar</li>
    <li class="atracada">Atracada</li>
    <li class="descargando">Descargando</li>
    <li class="vacia">Vacía</li>
    <li class="destracada">Desatracada</li>
  </ul>
  <article class="grid_15">
		<h1>Bauxita nacional</h1>
  <% @baxes.each do |bax| %>
    <div class="margen_b_30" id="<%= id(bax.id) %>">
      <h2 class="underlined down margen_b_20">BAX: <%=h bax.id %></h2>
      <div class="prefix_1 margen_b_30">
        <div class="info oculto">
          <span> </span>
          <p></p>
        </div>
        <div class="grid_13 alpha margen_b_10">
          <small class="tons">Motoempujador:</small>
          <p class="destacado margen_b_10"><%=h bax.remolcador %></p>
          <small class="tons">Empresa:</small>
          <p class="destacado margen_b_10"><%=h bax.empresa_transportista %></p>
          <small class="tons">Capitán:</small>
          <p class="destacado margen_b_10"><%=h bax.capitan %></p>
        </div>
        <div class="grid_11 omega margen_b_10">
          <small class="tons">zarpe el jobal:</small>
          <time datetime="<%=h bax.fecha_hora_zarpe %>" class="destacado margen_b_10"><%=h getFechaHora(bax.fecha_hora_zarpe, true) %></time>
          <small class="tons">eta matanzas (m-201):</small>
          <time datetime="<%=h bax.eta_arribo %>" class="destacado margen_b_10"><%=h getFechaHora(bax.eta_arribo, true) %></time>
          <small class="tons">Peso:</small>
          <p class="destacado margen_b_10 rojo"><%=h delimitar(bax.carga_transportar) %> tons.</p>
          <div class="derecha">
            <%= reportado(bax.reportado, bax.id) %>
          </div>
        </div>
        <div class="clearfix"></div>
        <!--progress id="progress_<%= id(bax.id) %>" value="0" max="<%=h bax.carga_transportar %>"></progress-->
        <h3 class="up">Gabarras (<%=h bax.cant_gabarras %>)</h3>
        <ul class="margen_b_30 gabarras" data-bax="<%=h bax.id %>">
        <% bax.gabarras.each do |gabarra| %>
          <li title="Peso: <strong><%=h delimitar(gabarra.tone_transportada) %> tons.</strong>" data-gabarra="<%=h gabarra.gabarra_id %>" id="<%= id(bax.id, gabarra.gabarra_id) %>" <%= habilitada(gabarra.status_img) %>>
            <%= image_tag gabarra.status_img, :alt => nil %>
            <p><%=h gabarra.gabarra_id %></p>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  </article>
  <aside class="grid_9">
		<h1>Buques</h1>
  </aside>
  <div class="clearfix"></div>
<% content_for :jquery_scripts do %>
  <%= javascript_include_tag 'libs/jquery.tipsy', 'libs/jquery.ui.min', 'arribos', :cache => true %>
<% end %>
