  		<h1 class="hasIcono login">Ingrese con su credencial de red</h1>
      <% if flash[:error]%>
      <div class="error">
        <span> </span>
        <p><%= flash[:error]%></p>
      </div>
      <% end %>
      <% form_for resource_name, resource, :url => session_path(resource_name) do |f| %>
        <ul>
        	<li>
         		<%= f.label :login, '<strong>Usuario:</strong>' %>
	          <%= f.text_field :login, :placeholder => 'nombre.apellido' %>
    	    </li>
      	 	<li>
           	<%= f.label :password, '<strong>Contraseña:</strong>' %>
            <%= f.password_field :password, :placeholder => 'contraseña' %>
	        </li>
	        <li>
	          <%= f.check_box :remember_me %>
            <%= f.label :remember_me, 'Recordarme en este equipo *' %>
	        </li>
	        <li>
	          <small>* Si utiliza un equipo compartido, se recomienda <strong>no</strong> activar esta opción.</small>
	        </li>
  	      <li class="derecha">
      	    <%= f.submit 'Ingresar', :class => "blue" %>
         	</li>
        </ul>
      <% end %>
      <div class="clearfix"></div>
      <%= render :partial => "shared/devise_links" %>
